{
	"compilerOptions": {
		"target": "ESNext",
		"module": "ESNext",
		"moduleResolution": "Node",
		"strict": true,
		"jsx": "preserve",
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"declaration": true,
		"noEmit": false,
		"composite": true,
        "baseUrl": ".",
        "paths": {
            "@/*": ["./src/*"]
        }
	},
	"include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx", "src/**/*.vue","env.d.ts", "src/**/*"],
	"references": [{ "path": "./tsconfig.node.json" }]
}
